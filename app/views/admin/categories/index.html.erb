<% provide(:manage, 'Manage Categories') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Categories</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body'>
          <%= link_to 'Add category', new_admin_category_path, class: 'button-item add-item' %>
          <%= form_tag '#', class: 'col-lg-3', id: 'search'  do %>
            <%= search_field_tag 'name', '', { class: 'form-control', placeholder: 'Search' } %>
          <% end %>
        </div>
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Category Parent</th>
              <th>Action</th>
            </tr>
          </thead>
            <tbody>
              <% @categories.each_with_index do |category, i| %>
                <tr class="odd gradeX">
                  <td class="center"><%= i + 1 %></td>
                  <td class="center"><%= link_to category.name, '#', class: 'detail-item' %></td>
                  <% if category.parent_id.nil? %>
                    <td class="center">No</td>
                  <% else %>
                    <td class="center"><%= parent_name(category) %></td>
                  <% end %>
                  <td class="center">
                    <%= link_to 'Update', edit_admin_category_path(category), class: 'button-item update-item' %> 
                    <%= link_to 'Delete', admin_category_path(category), method: :delete, class: 'button-item delete-item',
                                          data: { confirm: "You sure?" } %>
                  </td>
                </tr>
              <% end %>  
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
