<% provide(:manage, 'Manage Categories') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Categories</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body'>
          <div class="link-left">
            <%= link_to raw('<i class="fa fa-plus"></i> Add category'), new_admin_category_path, class: 'add-item' %>
            <%= link_to raw('<i class="fa fa-upload fa-3x"></i>'), import_admin_categories_path, class: 'csv-file' %>            
          </div>
          <%= form_tag admin_categories_path, method: :get, class: 'col-lg-3', id: 'search-cat'  do %>
            <div class="form-group input-search">
              <label>Name:</label>
              <%= search_field_tag 'content', '', { class: 'form-control', placeholder: 'Search' } %>
              </div>
            <%= button_tag raw('<i class="fa fa-search"></i>'), class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
        <table width="100%" class="table table-striped table-hover">
          <thead>
            <tr>
              <th class="">Category Name</th>
              <th class="center">Description</th>
              <th class="action-cat">Action</th>
            </tr>
          </thead>
          <tbody>
            <%= form_tag(delete_admin_categories_path,:id => 'form_id', data: { confirm: "Your sure?" }) do %>
              <%= render @categories %>
            <% end %>
          </tbody>
        </table>
        <%= link_to raw("<i class='fa fa-trash-o fa-2x'></i>"), "#", :onclick => "$('#form_id').submit()", class: "delete-more" %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Category Information</h4>
      </div>
      <div class="modal-body">
        <div id= "avatar-user"></div>
        <ul class="list-group">
          <li class="list-group-item">
            <strong class="title-up">Name: </strong><span id="name" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Description: </strong><span id="description" class="content-up"></span>
          </li>
        </ul>
        <div>
          <h4 class="modal-title">Products</h4>
          <table width="100%" class="table table-striped table-hover detail-product" id="dataTables-example-pro">
            <thead>
              <tr>
                <th class="center">#</th>
                <th class="">Name</th>
                <th class="center">Price</th>
                <th class="center">Quantity</th>
              </tr>
            </thead>
            <tbody id="tbody-append">
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script>
$(document).ready(function(){
  $(".detail-item").click(function(){
    $("#dataTables-example-pro").dataTable().fnDestroy();
    $("#tbody-append").empty();
    var cat_id = event.target.id;
    $.ajax({
      url: '/admin/categories/' + cat_id,
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
        $('#name').html(response.name);
        $('#description').html(response.description);
        if(response.asset) {
          html = '<img src="' + response.asset.file_url + '" alt= "Category" class= "avatar-detail">'
          $('#avatar-user').html(html);
        } else {
          html = '<img src="/product-default.png" alt= "Category" class= "avatar-detail">'
          $('#avatar-user').html(html);
        }
        content = "";
        var products = response.products;
        $.each(products, function( index, product ) {
          img_html = '<img src="' + product.assets[0].file_url + '" alt= "Avatar" class= "avatar detail-item">'
          content += '<tr class="odd gradeX">' +
                     '<td class="center">' + (index + 1) + '</td>' +
                     '<td class="">' + img_html + product.name + '</td>' +
                     '<td class="center">' + product.price + '</td>' +
                     '<td class="center">' + product.quantity + '</td>' +
                     '</tr>';
        });
        $('.detail-product').append(content);
        $("#dataTables-example-pro").dataTable( {
          "order": [[ 0, "asc" ]]
        });
      },
      error: function (err) {
        console.log(err);
      }
    });
    $("#myModal").modal();
  });
});
</script>