<% provide(:manage, 'Manage Categories') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Categories</p>
      </div>
      <!-- <div class="panel-body">
        <%= tree_list(@categories_no_parent)%>
      </div> -->
      <div class="panel-body">
        <div class='header-panel-body'>
          <div class="link-left">
            <%= link_to 'Add category', new_admin_category_path, class: 'button-item add-item' %>
            <%= link_to raw('<i class="fa fa-upload fa-3x"></i>'), import_admin_categories_path, class: 'csv-file' %>            
          </div>
          <%= form_tag admin_categories_path, method: :get, class: 'col-lg-3', id: 'search'  do %>
            <%= search_field_tag 'content', '', { class: 'form-control', placeholder: 'Search' } %>
            <%= button_tag 'Search', class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
        <table width="100%" class="table table-striped table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th class="center"><input type="checkbox" id="checkAll"></th>
              <th class="center">Name</th>
              <th class="center">Category Parent</th>
              <th class="center">Action</th>
            </tr>
          </thead>
          <tbody>
            <%= form_tag(delete_admin_categories_path,:id => 'form_id',) do %>
              <%= render @categories %>
            <% end %>
          </tbody>
        </table>
        <%= link_to raw("<i class='fa fa-trash-o fa-2x'></i>"), "#", :onclick => "$('#form_id').submit()", class: "delete-more" %>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
