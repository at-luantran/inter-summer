<% provide(:manage, 'Manage Categories') %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>Upload Category</p>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-3">
            <%= form_tag import_admin_categories_path, multipart: true do %>
              <div class='form-group'>
                <%= file_field_tag :file, class: 'form-control' %>
              </div>
              <%= submit_tag "Import", class: 'btn btn-success' %>
              <%= submit_tag "Reset", type: 'reset', class: 'btn btn-warning' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
