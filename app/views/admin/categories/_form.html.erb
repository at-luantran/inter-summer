<%= form_group_for f, :name, label: false  do %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
  </div>
<% end %>
<div class="image-list">
  <div class="form-group">
    <%= f.label :file %>
    <%= f.file_field :Image %>
    <% image_url = f.object&.asset&.file_url %>
    <%= image_tag(image_url, class: "img-resize") if image_url %>
  </div>
</div>
<%= form_group_for f, :parent_id, label: false  do %>
  <div class="form-group">
    <%= f.label(:parent_id, 'Parent_id:')%>
    <%= f.select(:parent_id, options_for_select(@cat_list.collect{ |u| [u.name, u.id] }, selected: @parent_id), { prompt: 'Choose id parent' }, { class: 'form-control' } ) %>
  </div>
<% end %>
<%= form_group_for f, :decsription, label: false  do %>
  <div class="form-group">
    <%= f.label :decsription %>
    <%= f.text_field :description, placeholder: 'Desciption', class: 'form-control' %>
  </div>
<% end %>
<%= f.submit "Submit", class: 'btn btn-success' %>
<%= f.submit "Reset", class: 'btn btn-warning', type: 'reset' %>