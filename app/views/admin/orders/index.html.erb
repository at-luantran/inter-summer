<% provide(:manage, 'Manage Order') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Orders</p>
      </div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Address</th>
              <th>Phone</th>
              <th>Total Price</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
            <tbody>
              <% @orders.each_with_index do |order, i| %>
                <tr class="odd gradeX">
                  <td class="center"><%= i + 1 %></td>
                  <td class="center"><%= link_to order.user.name , '#', class: 'detail-item' %></td>
                  <td class="center"><%= order.address %></td>
                  <td class="center"><%= order.phone %></td>
                  <td class="center"><%= order.total_price %></td>
                  <td class="center"> status</td>
                  <td class="center">
                    <%= link_to 'Delete', admin_order_path(order), method: :delete, class: 'button-item delete-item',
                                          data: { confirm: "You sure?" } %>
                    <%= link_to 'Detail', admin_order_path(order), class: 'button-item update-item' %> 
                  </td>
                </tr>
              <% end %>  
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
