<% provide(:manage, 'Manage Order') %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Orders</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body search-auction'>
          <%= form_tag admin_orders_path, method: :get, class: 'col-lg-9', id: 'search'  do %>
            <%= search_field_tag 'content', '', { class: 'form-control search-right', placeholder: 'Search' } %>
            <div class="form-group">
              <input type="date" name="date-start" id="date-start" class="form-control">
              <input type="date" name="date-end" class="form-control">
            </div>
            <div class="form-group col-lg-9">
              <%= select_tag(:status, options_for_select(["wait","checkouted","delivered", "received"]), { prompt: 'Choose status', class: 'form-control col-3' }) %>
            </div>
            <%= button_tag raw('<i class="fa fa-search"></i>'), class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
        <table width="100%" class="table table-striped table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th class="center"><input type="checkbox" id="checkAll"></th>
              <th>Full Name</th>
              <th class="center">Address</th>
              <th class="center">Phone</th>
              <th class="center">Total Price</th>
              <th class="center">Status</th>
              <th class="center">Type Payment</th>
              <th class="center">Action</th>
            </tr>
          </thead>
            <tbody>
              <%= form_tag(delete_admin_orders_path, :id => 'form_id', data: { confirm: "Your sure?" }) do %>
                <%= render @orders %>
              <% end %>
          </tbody>
        </table>
        <%= link_to raw("<i class='fa fa-trash-o fa-2x'></i>"), "#", :onclick => "$('#form_id').submit()", class: "delete-more" %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Order Information</h4>
      </div>
      <div class="modal-body">
        <div id= "avatar-user"></div>
        <ul class="list-group">
          <li class="list-group-item">
            <strong>Full Name:</strong> <span id="name"></span>
          </li>
          <li class="list-group-item">
            Email: <span id="email"></span>
          </li>
          <li class="list-group-item">
            Phone: <span id="phone"></span>
          </li>
          <li class="list-group-item">
            Address: <span id="address"></span>
          </li>
          <li class="list-group-item">
            City: <span id="city"></span>
          </li>
          <li class="list-group-item">
            Payment: <span id="payment"></span>
          </li>
          <li class="list-group-item">
            Total: <span id="total"></span>
          </li>
        </ul>
        <div>
          <h4 class="modal-title">Orders</h4>
          <table width="100%" class="table table-striped table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="center">#</th>
                <th class="">Name</th>
                <th class="center">Price</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $("#dataTables-example").dataTable().fnDestroy();
  $("#dataTables-example").dataTable( {
    "order": [[ 1, "desc" ]]
  } );
  $(".detail-item").click(function(){
    var order_id = event.target.id;
    $.ajax({
      url: '/admin/orders/' + order_id,
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
        $('#name').html(response.order.name);
        $('#email').html(response.order.email);
        $('#phone').html(response.order.phone);
        $('#address').html(response.order.address);
        $('#city').html(response.order.city);
        $('#payment').html(response.payment.name);
        $('#total').html(response.order.total_price);
      },
      error: function (err) {
        console.log(err);
      }
    });
    $("#myModal").modal();
  });
});
</script>