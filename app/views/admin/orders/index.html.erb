<% provide(:manage, 'Manage Order') %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Orders</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body search-auction'>
          <%= form_tag admin_orders_path, method: :get, class: 'col-lg-9', id: 'search'  do %>
            <%= search_field_tag 'content', '', { class: 'form-control search-right', placeholder: 'Search' } %>
            <div class="form-group">
              <input type="date" name="date-start" id="date-start" class="form-control">
              <input type="date" name="date-end" class="form-control">
            </div>
            <div class="form-group col-lg-9">
              <%= select_tag(:status, options_for_select(["wait","checkouted","delivered", "received"]), { prompt: 'Choose status', class: 'form-control col-3' }) %>
            </div>
            <%= button_tag 'Search', class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
        <table width="100%" class="table table-striped table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th class="center">#</th>
              <th class="center">Name</th>
              <th class="center">Address</th>
              <th class="center">Phone</th>
              <th class="center">Total Price</th>
              <th class="center">Status</th>
              <th class="center">Type Payment</th>
              <th class="center">Action</th>
            </tr>
          </thead>
            <tbody>
              <%= render @orders %>
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
