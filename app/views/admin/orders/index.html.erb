<% provide(:manage, 'Manage Order') %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Orders</p>
      </div>
      <div class="panel-body">
        <div class="header-panel-body search-auction">
          <%= form_tag admin_orders_path, method: :get, class: 'search', id: 'search-order' do %>
            <div class="form-group input-search">
              <label>Start date: </label>
              <input type="date" name="start_date" id="date-start" class="form-control" />
            </div>
            <div class="form-group input-search">
              <label>End date: </label>
              <input type="date" name="end_date" class="form-control" />
            </div>
            <div class="form-group input-search">
              <label>Status: </label>
              <%= select_tag(:status, options_for_select(@list_status), { prompt: 'Choose status', class: 'form-control col-3' }) %>
            </div>
            <%= button_tag raw('<i class="fa fa-search"></i>'), class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
        <table width="100%" class="table table-striped table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>Full Name</th>
              <th class="center">Address</th>
              <th class="center">Phone</th>
              <th class="center">Total Price</th>
              <th class="center">Status</th>
              <th class="center">Date</th>
              <th class="center">Type Payment</th>
              <th class="center">Action</th>
            </tr>
          </thead>
            <tbody>
              <%= form_tag(delete_admin_orders_path, :id => 'form_id', data: { confirm: "Your sure?" }) do %>
                <%= render @orders %>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Order Information</h4>
      </div>
      <div class="modal-body">
        <div id= "avatar-user"></div>
        <ul class="list-group">
          <li class="list-group-item">
            <strong class="title-up">Full Name:</strong> <span id="name" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Phone:</strong> <span id="phone" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Address:</strong> <span id="address" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">City:</strong> <span id="city" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Payment:</strong> <span id="payment" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Fee:</strong> <span id="fee" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Total:</strong> <span id="total" class="content-up"></span>
          </li>
        </ul>
        <div>
          <h4 class="modal-title">Items</h4>
          <table width="100%" class="table table-striped table-hover detail-order" id="dataTables-example-order">
            <thead>
              <tr>
                <th class="center">#</th>
                <th class="">Name</th>
                <th class="center">Price</th>
              </tr>
            </thead>
            <tbody id="tbody-append">
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $(".detail-item").click(function(){
    $("#dataTables-example-order").dataTable().fnDestroy();
    $("#tbody-append").empty();
    var order_id = event.target.id;
    $.ajax({
      url: '/admin/orders/' + order_id,
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
        $('#name').html(response.name);
        $('#phone').html(response.phone);
        $('#address').html(response.address);
        $('#city').html(response.city);
        $('#payment').html(response.payment.name);
        $('#fee').html(response.payment.transport_fee);
        $('#total').html(response.total_price);
        if(response.user.asset) {
          html = '<img src="' + response.user.asset.file_url + '" alt= "Avatar" class= "avatar-detail">'
          $('#avatar-user').html(html);
        } else {
          html = '<img src="/avatar-default.png" alt= "Avatar" class= "avatar-detail">'
          $('#avatar-user').html(html);
        }
        content = "";
        var items = response.items;
        $.each(items, function( index, item ) {
          img_html = '<img src="' + item.product.assets[0].file_url + '" alt= "Avatar" class= "avatar detail-item">'
          content += '<tr class="odd gradeX">' +
                     '<td class="center">' + (index + 1) + '</td>' +
                     '<td class="">' + img_html + item.product.name + '</td>' +
                     '<td class="center">' + item.amount + '</td>' +
                     '</tr>';
        });
        $('.detail-order').append(content);
        $("#dataTables-example-order").dataTable( {
          "order": [[ 0, "asc" ]]
        });
      },
      error: function (err) {
        console.log(err);
      }
    });
    $("#myModal").modal();
  });
});
</script>