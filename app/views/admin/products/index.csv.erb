<%- attributes = ['SSID', 'Category', 'Name', 'Price', 'Price_at', 'Quantity'] -%>
<%= CSV.generate_line(attributes, skip_blanks: true).html_safe %>
<%- @products.each do |product| -%>
  <%-
    price = number_with_delimiter(product.price, :delimiter => ',') + ' VND'
    price_at = number_with_delimiter(product.price_at, :delimiter => ',') + ' VND'
    record = [product.id, product.category.name, product.name, price, price_at, product.quantity]
  -%>
  <%= CSV.generate_line(record, skip_blanks: true).html_safe -%>
<%- end -%>
