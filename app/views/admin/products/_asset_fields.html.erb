<div class='image-item'>
  <%= form_group_for f, :file, label: false  do %>
    <div class="form-group">
      <%= f.label :Image %>
      <%= f.file_field :file %>
      <%= image_tag(f.object.file_url, class: "img-resize") if f.object.file_url.present? %>
    </div>
  <% end %>
  <%= f.hidden_field :_destroy, value: 'false' %>
  <%= link_to "Remove Image", '#', onClick: "removeField(this); return false;", class: "btn btn-danger remove" %>
</div>
