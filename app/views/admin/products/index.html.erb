<% provide(:manage, 'Manage products') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Products</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body col-lg-12'>
          <div class="link-left">
            <%= link_to raw('<i class="fa fa-plus"></i> Add product'), new_admin_product_path, class: 'add-item' %>
            <%= link_to raw('<i class="fa fa-download fa-3x"></i>'), admin_products_path(format: :csv), class: 'csv-file' %>
          </div>
        </div>
        <table width="100%" class="table table-striped table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th class="center"><input type="checkbox" id="checkAll"></th>
              <th class="center">Name</th>
              <th class="center">Category</th>
              <th class="center">Picture</th>              
              <th class="center">Price</th>
              <th class="center">Quantity</th>
              <th class="center">Price start</th>
              <th class="center">Action</th>
            </tr>
          </thead>
          <tbody>
            <%= form_tag(delete_admin_products_path,:id => 'form_id', data: { confirm: "Your sure?" }) do %>
              <%= render @products %>
            <% end %>
          </tbody>
        </table>
        <%= link_to raw("<i class='fa fa-trash-o fa-2x'></i>"), "#", :onclick => "$('#form_id').submit()", class: "delete-more" %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Product Information</h4>
      </div>
      <div class="modal-body">
        <div id= "list-image"></div>
        <ul class="list-group">
          <li class="list-group-item">
            <strong class="title-up">Product:</strong> <span id="name" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Category:</strong> <span id="category" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Quantity:</strong> <span id="quantity" class="content-up"></span>
          </li>
        </ul>
        <div>
          <h4 class="modal-title">Detail</h4>
          <p id="detail-pro"></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $(".detail-item").click(function(){
    var product_id = event.target.id;
    $.ajax({
      url: '/admin/products/' + product_id,
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
        $('#name').html(response.product.name);
        $('#category').html(response.category.name);
        $('#quantity').html(response.product.quantity);
        if(response.images) {
          html = '';
          var images = response.images;
          $.each(images, function (index, image) {
            html += '<img src="' + image.file.url + '" alt= "Avatar" class= "image-product">'            
          });
          $('#list-image').html(html);
        } else {
          html = '<img src="/product-default.png" alt= "Avatar" class= "image-product">'
          $('#list-image').html(html);
        }
        $('#detail-pro').html(response.product.detail);
      },
      error: function (err) {
        console.log(err);
      }
    });
    $("#myModal").modal();
  });
});
</script>