<% provide(:manage, 'Manage products') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Products</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body'>
          <%= link_to 'Add product', new_admin_product_path, class: 'button-item add-item' %>
          <%= form_tag '#', class: 'col-lg-3', id: 'search'  do %>
            <%= search_field_tag 'name', '', { class: 'form-control', placeholder: 'Search' } %>
          <% end %>
        </div>
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th class="center">#</th>
              <th class="center">Name</th>
              <th class="center">Category</th>
              <th class="center">Picture</th>              
              <th class="center">Detail</th>
              <th class="center">Price</th>
              <th class="center">Quantity</th>
              <th class="center">Status</th>
              <th class="center">Price start</th>
              <th class="center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each_with_index do |product, i| %>
              <tr class="odd gradeX">
                <td class="center"><%= i + 1 %></td>
                <td class="center"><%= link_to product.name, admin_product_path(product), class: 'detail-item' %></td>
                <td class="center"><%= parent_name(product.category_id) %></td>
                <td class="center"><%= image_tag image_first_of_object(product).url, class: 'img-resize' %></td>
                <td class="center"><%= product.detail %></td>
                <td class="center"><%= product.price %></td>
                <td class="center"><%= product.quantity %></td>
                <td class="center"><%= product.status %></td>
                <td class="center"><%= product.price_at %></td>
                <td class="center">
                  <%= link_to 'Update', edit_admin_product_path(product), class: 'button-item update-item' %> 
                  <%= link_to 'Delete', admin_product_path(product), method: :delete, class: 'button-item delete-item',
                                      data: { confirm: "You sure?" } %>
                </td>
              </tr>
            <% end %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
