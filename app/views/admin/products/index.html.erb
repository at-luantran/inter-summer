<% provide(:manage, 'Manage products') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Products</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body'>
          <div class="link-left">
            <%= link_to raw('<i class="fa fa-plus"></i> Add product'), new_admin_product_path, class: 'add-item' %>
            <%= link_to raw('<i class="fa fa-download fa-3x"></i>'), admin_products_path(format: :csv), class: 'csv-file' %>
          </div>
          <%= form_tag admin_products_path, method: :get, class: 'col-lg-3', id: 'search'  do %>
            <%= search_field_tag 'content', '', { class: 'form-control', placeholder: 'Search' } %>
            <%= button_tag raw('<i class="fa fa-search"></i>'), class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
        <% if @products.any? %>
          <table width="100%" class="table table-striped table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="center"><input type="checkbox" id="checkAll"></th>
                <th class="center">Name</th>
                <th class="center">Category</th>
                <th class="center">Picture</th>              
                <th class="center">Price</th>
                <th class="center">Quantity</th>
                <th class="center">Price start</th>
                <th class="center">Action</th>
              </tr>
            </thead>
            <tbody>
              <%= form_tag(delete_admin_products_path,:id => 'form_id', data: { confirm: "Your sure?" }) do %>
                <%= render @products %>
              <% end %>
            </tbody>
          </table>
          <%= link_to raw("<i class='fa fa-trash-o fa-2x'></i>"), "#", :onclick => "$('#form_id').submit()", class: "delete-more" %>
          <%= will_paginate %>
        <% else %>
          <p>No product</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Product Information</h4>
      </div>
      <div class="modal-body">
        <div id= "avatar-user"></div>
        <ul class="list-group">
          <li class="list-group-item">
            <strong>Product:</strong> <span id="name"></span>
          </li>
          <li class="list-group-item">
            Category: <span id="category"></span>
          </li>
          <li class="list-group-item">
            Quantity: <span id="quantity"></span>
          </li>
        </ul>
        <div>
          <h4 class="modal-title">Orders</h4>
          <table width="100%" class="table table-striped table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="center">#</th>
                <th class="">Name</th>
                <th class="center">Email</th>
                <th class="center">Role</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $(".detail-item").click(function(){
    var product_id = event.target.id;
    $.ajax({
      url: '/admin/products/' + product_id,
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
        $('#name').html(response.product.name);
        $('#category').html(response.product.category_id);
        $('#quantity').html(response.product.quntity);
        if(response.image) {
          html = '<img src="' + response.image.file.url + '" alt= "Avatar" class= "avatar-detail">'
          $('#avatar-user').html(html);
        } else {
          html = '<img src="/product-default.png" alt= "Avatar" class= "avatar-detail">'
          $('#avatar-user').html(html);
        }
      },
      error: function (err) {
        console.log(err);
      }
    });
    $("#myModal").modal();
  });
});
</script>