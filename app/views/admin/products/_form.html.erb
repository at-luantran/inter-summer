<%= form_group_for "col-lg-12", f, :category_id, label: false  do %>
  <div class="form-group">
    <%= f.label(:category_id, 'Category:')%>
    <div class="input-group col-lg-3">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-home" aria-hidden="true"></i>
      </span>
      <%= f.select(:category_id, options_for_select(@categories.collect{ |u| [u.name, u.id] }, selected: @product.category_id), { prompt: 'Choose category' }, { class: 'form-control' } ) %>
    </div>
  </div>
<% end %>
<%= form_group_for "col-lg-12", f, :name, label: false  do %>
  <div class="form-group">
    <%= f.label :name %>
    <div class="input-group col-lg-6">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-product-hunt" aria-hidden="true"></i>
      </span>
      <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
    </div>
  </div>
<% end %>
<%= form_group_for "col-lg-4", f, :price, label: false  do %>
  <div class="form-group">
    <%= f.label :price %>
    <div class="input-group col-lg-8">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-money" aria-hidden="true"></i>
      </span>
      <%= f.number_field :price, placeholder: 'Price', class: 'form-control' %>
    </div>
  </div>  
<% end %>
<%= form_group_for "col-lg-4", f, :price, label: false  do %>
  <div class="form-group">
    <%= f.label :quantity %>
    <div class="input-group col-lg-8">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-plus-square" aria-hidden="true"></i>
      </span>
      <%= f.number_field :quantity, placeholder: 'Quantity', class: 'form-control' %>
    </div>
  </div>
<% end %>
<%= form_group_for "col-lg-4", f, :price, label: false  do %>
  <div class="form-group">
    <%= f.label :price_at %>
    <div class="input-group col-lg-8">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-usd" aria-hidden="true"></i>
      </span>
      <%= f.number_field :price_at, placeholder: 'Price start at', class: 'form-control' %>
    </div>
  </div>
<% end %>
<div class="col-lg-12 nested">
  <div class="image-list">
    <%= f.fields_for :assets do |asset| %>
      <%= render "asset_fields", f: asset %>
    <% end %>
  </div>
  <%= link_to_add_fields("Add picture", f, :assets) %>
</div>
<%= form_group_for "col-lg-12", f, :detail, label: false  do %>
  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_area :detail, placeholder: 'Detail', class: 'form-control', class: "ckeditor" %>
  </div>
<% end %>
<div class="col-lg-12">
  <%= f.submit "Submit", class: 'btn btn-success' %>
  <%= f.submit "Reset", class: 'btn btn-warning', type: 'reset' %>
</div>
