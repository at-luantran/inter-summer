<% provide(:manage, 'Manage Users') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Users</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body'>
          <%= link_to raw('<i class="fa fa-plus"></i> Add user'), new_admin_user_path, class: 'add-item' %>
          <%= form_tag admin_users_path, method: :get, class: 'col-lg-3', id: 'search'  do %>
            <%= search_field_tag 'content', '', { class: 'form-control', placeholder: 'Search' } %>
            <%= button_tag raw('<i class="fa fa-search"></i>'), class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
        <% if @users.any? %>
          <table width="100%" class="table table-striped table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="center">SISID</th>
                <th class="">Name</th>
                <th class="center">Email</th>
                <th class="center">Role</th>
                <th class="center">Address</th>
                <th class="center">Phone</th>
                <th class="center">Gender</th>
                <th class="center">Action</th>
              </tr>
            </thead>
            <tbody>
              <%= render @users %>
            </tbody>
          </table>
          <%= will_paginate %>
        <% else %>
          <p>No user</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">User Information</h4>
      </div>
      <div class="modal-body">
        <div id= "avatar-user"></div>
        <ul class="list-group">
          <li class="list-group-item">
            <strong>Full Name:</strong> <span id="name"></span>
          </li>
          <li class="list-group-item">
            Birth day: <span id="birth-day"></span>
          </li>
          <li class="list-group-item">
            Email: <span id="email"></span>
          </li>
          <li class="list-group-item">
            Phone: <span id="phone"></span>
          </li>
          <li class="list-group-item">
            Address: <span id="address"></span>
          </li>
          <li class="list-group-item">
            Gender: <span id="gender"></span>
          </li>
          <li class="list-group-item">
            Role: <span id="role"></span>
          </li>
        </ul>
        <div>
          <h4 class="modal-title">Orders</h4>
          <table width="100%" class="table table-striped table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="center">#</th>
                <th class="">Name</th>
                <th class="center">Email</th>
                <th class="center">Role</th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel"></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="full-name" class="col-form-label">Full name:</label>
            <input type="text" class="form-control" id="full-name" disabled>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Reason:</label>
            <textarea class="form-control" id="reason"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger" id="block-user">Submit</button>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $(".detail-item").click(function(){
    var user_id = event.target.id;
    $.ajax({
      url: '/admin/users/' + user_id,
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
        $('#name').html(response.user.name);
        $('#birth-day').html(response.user.birth_day);
        $('#email').html(response.user.email);
        $('#phone').html(response.user.phone);
        $('#address').html(response.user.address);
        $('#gender').html(capitalize(response.user.gender));
        $('#role').html(capitalize(response.user.role));
        if(response.asset) {
          html = '<img src="' + response.asset.file.url + '" alt= "Avatar" class= "avatar-detail">'
          $('#avatar-user').html(html);
        } else {
          html = '<img src="/avatar-default.png" alt= "Avatar" class= "avatar-detail">'
          $('#avatar-user').html(html);
        }
      },
      error: function (err) {
        console.log(err);
      }
    });
    $("#myModal").modal();
  });

  $(".block-item").click(function(){
    var object = $(event.target);
    $('#full-name').val(object.attr("name"));
    var arr = object.attr("id").split('-');
    user_id = arr[1];
    if(object.attr("action") == 'block'){
      $('#exampleModalLabel').html("Block User.");
    } else {
      $('#exampleModalLabel').html("Open User.");
    }
    localStorage.setItem('user_id', user_id);
    localStorage.setItem('action', object.attr("action"));
    $("#exampleModal").modal();  
  });
  
  $("#block-user").click(function(){
    $('#exampleModal').modal('hide');
    var user_id = localStorage.getItem('user_id');
    var id = '#block-' + user_id;
    var action = localStorage.getItem('action');
    if(action== 'block'){
      $(id).removeClass("fa-unlock-alt");
      $(id).addClass("fa-lock");
    } else {
      $(id).removeClass("fa-lock");
      $(id).addClass("fa-unlock-alt");
    }
    $.ajax({
      url: '/admin/users/' + user_id + '/block',
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
         $.bootstrapGrowl(response.message,{
            ele: 'body', // which element to append to
            type: 'success', // (null, 'info', 'danger', 'success')
            offset: { from: 'top', amount: 50 }, // 'top', or 'bottom'
            align: 'right', // ('left', 'right', or 'center')
            width: 250, // (integer, or 'auto')
            delay: 4000, // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
            allow_dismiss: true, // If true then will display a cross to close the popup.
            stackup_spacing: 10
        });
      },
      error: function (err) {
        console.log(err);
      }
    });
  });
});
</script>
