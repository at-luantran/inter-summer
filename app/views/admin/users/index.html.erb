<% provide(:manage, 'Manage Users') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Users</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body col-lg-12'>
          <%= link_to raw('<i class="fa fa-plus"></i> Add user'), new_admin_user_path, class: 'add-item' %>
        </div>
        <table width="100%" class="table table-striped table-hover dataTable" id="dataTables-example" aria-describedby="dataTables-example_info">
          <thead>
            <tr>
              <th class="center">SISID</th>
              <th class="">Name</th>
              <th class="">Email</th>
              <th class="center">Role</th>
              <th class="center">Address</th>
              <th class="center">Phone</th>
              <th class="center">Gender</th>
              <th class="center">Action</th>
            </tr>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">User Information</h4>
      </div>
      <div class="modal-body">
        <div id= "avatar-user"></div>
        <ul class="list-group">
          <li class="list-group-item">
            <strong class="title-up">Full Name:</strong> <span id="name" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Birth day:</strong> <span id="birth-day" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Email:</strong> <span id="email" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Phone:</strong> <span id="phone" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Address:</strong> <span id="address" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Gender:</strong> <span id="gender" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Role:</strong> <span id="role" class="content-up"></span>
          </li>
        </ul>
        <div>
          <h4 class="modal-title">Cancel Auctions</h4>
          <table width="100%" class="table table-striped table-hover detail-block" id="dataTables-example-block">
            <thead>
              <tr>
                <th class="center">#</th>
                <th class="">Name</th>
                <th class="center">Date</th>
              </tr>
            </thead>
            <tbody id="block-append">
            </tbody>
          </table>
        </div>
        <div>
          <h4 class="modal-title">Orders</h4>
          <table width="100%" class="table table-striped table-hover detail-order" id="dataTables-example-order">
            <thead>
              <tr>
                <th class="center">#</th>
                <th class="">Payment</th>
                <th class="center">Status</th>
                <th class="center">Quantity</th>
                <th class="center">Total Price</th>
              </tr>
            </thead>
            <tbody id="tbody-append">
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel"></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="full-name" class="col-form-label">Full name:</label>
            <input type="text" class="form-control" id="full-name" disabled>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Reason:</label>
            <textarea class="form-control" id="reason"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger" id="block-user">Submit</button>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $("#dataTables-example-block").dataTable().fnDestroy();
  $("#dataTables-example-order").dataTable().fnDestroy();
  $("#tbody-append").empty();
  $("#block-append").empty();
  $(".detail-item").click(function(){
    var user_id = event.target.id;
    $.ajax({
      url: '/admin/users/' + user_id,
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
        $('#name').html(response.name);
        $('#birth-day').html(response.birth_day);
        $('#email').html(response.email);
        $('#phone').html(response.phone);
        $('#address').html(response.address);
        $('#gender').html(capitalize(response.gender));
        $('#role').html(capitalize(response.role));
        if(response.asset) {
          html = '<img src="' + response.asset.file_url + '" alt= "Avatar" class= "avatar-detail">'
          $('#avatar-user').html(html);
        } else {
          html = '<img src="/avatar-default.png" alt= "Avatar" class= "avatar-detail">'
          $('#avatar-user').html(html);
        }
        item_html = "";
        var items = response.item_deletes;
        $.each(items, function( index, item ) {
          img_html = '<img src="' + item.product.assets[0].file_url + '" alt= "Avatar" class= "avatar detail-item">'
          item_html += '<tr class="odd gradeX">' +
                     '<td class="center">' + (index + 1) + '</td>' +
                     '<td class="">' + img_html + item.product.name + '</td>' +
                     '<td class="center">' + item.deleted_at + '</td>' +
                     '</tr>';
        });
        $('.detail-block').append(item_html);
        $("#dataTables-example-block").dataTable( {
          "order": [[ 0, "asc" ]]
        });
        content = "";
        var orders = response.orders;
        $.each(orders, function( index, order ) {
          content += '<tr class="odd gradeX">' +
                     '<td class="center">' + (index + 1) + '</td>' +
                     '<td class="">' + order.payment.name + '</td>' +
                     '<td class="center">' + order.status + '</td>' +
                     '<td class="center">' + order.quantity + '</td>' +
                     '<td class="center">' + order.total_price + '</td>' +
                     '</tr>';
        });
        $('.detail-order').append(content);
        $("#dataTables-example-order").dataTable( {
          "order": [[ 0, "asc" ]]
        });
      },
      error: function (err) {
        console.log(err);
      }
    });
    $("#myModal").modal();
  });

  $(".block-item").click(function(){
    var object = $(event.target);
    $('#full-name').val(object.attr("name"));
    var arr = object.attr("id").split('-');
    user_id = arr[1];
    if(object.attr("action") == 'block'){
      $('#exampleModalLabel').html("Block User.");
    } else {
      $('#exampleModalLabel').html("Open User.");
    }
    localStorage.setItem('user_id', user_id);
    localStorage.setItem('action', object.attr("action"));
    $("#exampleModal").modal();  
  });
  
  $("#block-user").click(function(){
    $('#exampleModal').modal('hide');
    $('#reason').val('');
    var user_id = localStorage.getItem('user_id');
    var id = '#block-' + user_id;
    var action = localStorage.getItem('action');
    if(action== 'block'){
      $(id).removeClass("fa-unlock-alt");
      $(id).addClass("fa-lock");
    } else {
      $(id).removeClass("fa-lock");
      $(id).addClass("fa-unlock-alt");
    }
    var reason = $('#reason').val();
    $.ajax({
      data: { reason: reason },
      url: '/admin/users/' + user_id + '/block',
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
         $.bootstrapGrowl(response.message,{
            ele: 'body', // which element to append to
            type: 'success', // (null, 'info', 'danger', 'success')
            offset: { from: 'top', amount: 50 }, // 'top', or 'bottom'
            align: 'right', // ('left', 'right', or 'center')
            width: 250, // (integer, or 'auto')
            delay: 4000, // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
            allow_dismiss: true, // If true then will display a cross to close the popup.
            stackup_spacing: 10
        });
      },
      error: function (err) {
        console.log(err);
      }
    });
  });
});
</script>
