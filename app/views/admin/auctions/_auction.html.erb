<tr class="odd gradeX">
  <td class="center"><%= check_box_tag 'ids[]', auction.id, false, :class => 'table-row-checkbox' %></td>
  <td class="center">
    <%= image_tag image_first_of_object(auction.timer.product), class: 'avatar' %>
    <%= link_to auction.timer.product.name, '#', class: 'detail-item' %>
  </td>
  <td class="center"><%= auction.timer.created_at %></td>
  <td class="center"><%= auction.auction_details.order('price_bid DESC').first.user.name if auction.auction_details.order('price_bid DESC').first %></td>
  <td class="center"><%= auction.auction_details.order('price_bid DESC').first.price_bid if auction.auction_details.order('price_bid DESC').first %></td>
  <td class="center"><%= auction.auction_details.order('price_bid DESC').first.price_bid - auction.timer.product.price if auction.auction_details.order('price_bid DESC').first %></td>
  <td class="center">
    <% if auction.status == Common::Const::AuctionStatus::RUNNING %>
      <img src="/run.gif" alt="running" class= "avatar" />
    <% else %>
      <img src="/stop.png" alt="running" class= "avatar" />      
    <% end %>
  </td>
  <td class="center auction-action">
    <%= link_to raw('<i class="fa fa-info-circle"></i>'), admin_auction_path(auction), class: 'button-item update-item btn-margin' %> 
    <%= link_to raw('<i class="fa fa-trash"></i>'), admin_auction_path(auction), method: :delete, class: 'button-item delete-item',
                          data: { confirm: "You sure?" } %>

  </td>
</tr>
