<% provide(:manage, 'Auction Detail') %>
<p>Product Name: <%= @auction.product.name %></p>
<p>Start At: <%= @auction.start_at %></p>
<p>Period: <%= @auction.period %></p>
<p>Bid Step: <%= @auction.bid_step %></p>
<% if @auction.auction_details.any? %>
  <div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body'>
        </div>
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Price_bid</th>
            </tr>
          </thead>
            <tbody>
              <% @auction_details.each_with_index do |auction, i| %>
                <tr class="odd gradeX">
                  <td class="center"><%= i + 1 %></td>
                  <td class="center"><%= auction.user.name %></td>
                  <td class="center"><%= auction.price_bid %></td>
                </tr>
              <% end %>  
          </tbody>
        </table>
        <%= will_paginate @auction_details %>
      </div>
    </div>
  </div>
</div>
<% else %>
  <p>Không có ai đáu giá sản phẩm này</p>
<% end %>
