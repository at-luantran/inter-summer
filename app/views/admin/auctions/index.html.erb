<% provide(:manage, 'Manage Auctions') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Auctions</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body search-auction'>
          <%= form_tag admin_auctions_path, method: :get, class: 'search col-lg-8', id: 'search-auction'  do %>
            <div class="form-group input-search">
              <label>Start time:</label>
              <input type="datetime-local" name="start_time" class="form-control" />
            </div>
            <div class="form-group input-search">
              <label>End time:</label>
              <input type="datetime-local" name="end_time" class="form-control" />
            </div>
            <div class="form-group input-search">
              <label>Status: </label>
              <%= select_tag(:status, options_for_select(@list_status), { prompt: 'Choose status', class: 'form-control col-3' }) %>
            </div>
            <%= button_tag raw('<i class="fa fa-search"></i>'), class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
          <p class="total-space">
            <strong class="total-auction red-space">Total auction run:</strong>
            <%= @auctions.where(status: Common::Const::AuctionStatus::RUNNING).size %>
          </p>
          <table width="100%" class="table table-striped table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="center"><input type="checkbox" id="checkAll"></th>
                <th class="center">Product</th>
                <th class="center">Start at</th>
                <th class="center">Winner</th>
                <th class="center">Price final</th>
                <th class="center">Money</th>                
                <th class="center">Status</th>
                <th class="center">Action</th>
              </tr>
            </thead>
            <tbody>
              <%= form_tag(delete_admin_auctions_path,:id => 'form_id', data: { confirm: "Your sure?" }) do %>
                <%= render @auctions %>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Auction Information</h4>
      </div>
      <div class="modal-body">
        <div id= "avatar-user"></div>
        <ul class="list-group">
          <li class="list-group-item">
            <strong class="title-up">Product name:</strong> <span id="product-name" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Winner:</strong> <span id="winner" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Price final:</strong> <span id="price" class="content-up"></span>
          </li>
          <li class="list-group-item">
            <strong class="title-up">Status</strong> <span id="status-auction" class="content-up"></span>
          </li>
        </ul>
        <div>
          <h4 class="modal-title">Auction details</h4>
          <table width="100%" class="table table-striped table-hover detail-order" id="dataTables-example-order">
            <thead>
              <tr>
                <th class="center">#</th>
                <th class="">Name</th>
                <th class="center">Price</th>
                <th class="center">Time</th>
              </tr>
            </thead>
            <tbody id="tbody-append">
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $(".detail-item").click(function(){
    $("#dataTables-example-order").dataTable().fnDestroy();
    $("#tbody-append").empty();
    var auction_id = event.target.id;
    $.ajax({
      url: '/admin/auctions/' + auction_id,
      type: "GET",
      contentType: 'application/json; charset=utf-8',
      dataType: 'JSON',
      async: true,
      success: function (response) {
        $('#product-name').html(response.product.name);
        avatar_html = ""
        if(winner.asset) {
            avatar_html = '<img src="' + winner.asset.file_url + '" alt= "Avatar" class= "avatar detail-item">'
        } else {
          avatar_html = '<img src="/avatar-default.png" alt= "Avatar" class= "avatar-detail">'
        }
        if (winner) { $('#winner').html(response.winner.name); }
        $('#price').html(response.price_final);
        $('#status-auction').html(capitalize(response.status));
        html = '<img src="' + response.product.assets[0].file_url + '" alt= "Avatar" class= "avatar-detail">'
        $('#avatar-user').html(html);
        content = "";
        var details = response.auction_details;
        $.each(details, function( index, detail ) {
          if(detail.user.asset) {
            img_html = '<img src="' + detail.user.asset.file_url + '" alt= "Avatar" class= "avatar detail-item">'
          } else {
            img_html = '<img src="/avatar-default.png" alt= "Avatar" class= "avatar-detail">'
          }
          content += '<tr class="odd gradeX">' +
                     '<td class="center">' + (index + 1) + '</td>' +
                     '<td class="">' + img_html + detail.user.name + '</td>' +
                     '<td class="center">' + detail.price_bid + '</td>' +
                     '<td class="center">' + detail.updated_at + '</td>' +
                     '</tr>';
        });
        $('.detail-order').append(content);
        $("#dataTables-example-order").dataTable( {
          "order": [[ 0, "asc" ]]
        });
      },
      error: function (err) {
        console.log(err);
      }
    });
    $("#myModal").modal();
  });
});
</script>

