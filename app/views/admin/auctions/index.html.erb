<% provide(:manage, 'Manage Auctions') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Auctions</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body search-auction'>
          <%= form_tag admin_auctions_path, method: :get, class: 'col-lg-7', id: 'search'  do %>
            <%= search_field_tag 'content', '', { class: 'form-control search-right', placeholder: 'Search' } %>
            <div class="form-group">
              <input type="text" name="time-start" id="time-start" class="form-control">              
              <input type="text" name="time-end" id="time-end" class="form-control">
            </div>
            <div class="form-group">
              <input type="date" name="date-start" id="date-start" class="form-control">
              <input type="date" name="date-end" class="form-control">
            </div>
            <%= button_tag 'Search', class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
        <table width="100%" class="table table-striped table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th class="center">#</th>
              <th class="center">Product</th>
              <th class="center">Start at</th>
              <th class="center">User win</th>
              <th class="center">Price final</th>
              <th class="center">Status</th>
              <th class="center">Action</th>
            </tr>
          </thead>
            <tbody>
              <%= render @auctions %>
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
