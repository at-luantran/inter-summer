<% provide(:manage, 'Manage Auctions') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Auctions</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body search-auction'>
          <%= form_tag admin_auctions_path, method: :get, class: 'col-lg-8', id: 'search'  do %>
            <%= search_field_tag 'content', '', { class: 'form-control search-right', placeholder: 'Search' } %>
            <div class="form-group">
              <%= date_select(:start_date, "", {default: { day: 1, month: 1, year: 1900 }}, { class: 'form-control-static' }) %>
              <%= date_select(:end_date, "", {default: { day: 1, month: 1, year: 1900 }}, { class: 'form-control-static' }) %>
            </div>
            <div class="form-group">
              <%= time_select(:start_hour, '', { default: {hour: '00', minute: '00', second: '00'}}, { class: 'form-control-static' }) %>
              <%= time_select(:end_hour, '', { default: {hour: '00', minute: '00', second: '00'}}, { class: 'form-control-static' }) %>
            </div>
            <%= button_tag 'Search', class: 'btn btn-primary search-item' %>
          <% end %>
        </div>
        <table width="100%" class="table table-striped table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th class="center">#</th>
              <th class="center">Product</th>
              <th class="center">Start at</th>
              <th class="center">User win</th>
              <th class="center">Price final</th>
              <th class="center">Status</th>
              <th class="center">Action</th>
            </tr>
          </thead>
            <tbody>
              <%= render @auctions %>
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
