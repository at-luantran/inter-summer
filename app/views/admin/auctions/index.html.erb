<% provide(:manage, 'Manage Auctions') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Auctions</p>
      </div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>#</th>
              <th>Product</th>
              <th>Start At</th>
              <th>Period</th>
              <th>Bid Step</th>
              <th>Action</th>
            </tr>
          </thead>
            <tbody>
              <% @auctions.each_with_index do |auction, i| %>
                <tr class="odd gradeX">
                  <td class="center"><%= i + 1 %></td>
                  <td class="center"><%= link_to auction.product.name, '#', class: 'detail-item' %></td>
                  <td class="center"><%= auction.start_at %></td>
                  <td class="center"><%= auction.period %></td>
                  <td class="center"><%= auction.bid_step %></td>
                  <td class="center">
                    <%= link_to 'Update', edit_admin_auction_path(auction), class: 'button-item update-item' %> 
                    <%= link_to 'Delete', admin_auction_path(auction), method: :delete, class: 'button-item delete-item',
                                          data: { confirm: "You sure?" } %>
                    <%= link_to 'Detail', admin_auction_path(auction), class: 'button-item update-item' %> 

                  </td>
                </tr>
              <% end %>  
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
