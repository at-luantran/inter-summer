<% provide(:manage, 'Manage Auctions') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Auctions</p>
      </div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>#</th>
              <th>Product</th>
              <th>Start At</th>
              <th>Period</th>
              <th>Bid Step</th>
              <th>Action</th>
            </tr>
          </thead>
            <tbody>
              <%= render @auctions %>
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
