<% provide(:manage, 'Manage Timers') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List timers</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body'>
          <%= link_to raw('<i class="fa fa-plus"></i> Add timer'), new_admin_product_timer_path(@product), class: 'button-item add-item' %>
          <%= form_tag '#', class: 'col-lg-3', id: 'search'  do %>
            <%= search_field_tag 'name', '', { class: 'form-control', placeholder: 'Search' } %>
          <% end %>
        </div>
        <% if @timers.any? %>
          <table width="100%" class="table table-striped table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="center"><input type="checkbox" id="checkAll"></th>
                <th class="center">Start at</th>
                <th class="center">End at</th>
                <th class="center">Period</th>          
                <th class="center">Bid Step</th>
                <th class="center">Status</th>
                <th class="center">Action</th>
              </tr>
            </thead>
            <tbody>
              <%= form_tag(delete_admin_product_timers_path,:id => 'form_id', data: { confirm: "Your sure?" }) do %>
                <%= render @timers %>
              <% end %>
            </tbody>
          </table>
          <%= will_paginate %>          
          <%= link_to raw("<i class='fa fa-trash-o fa-2x'></i>"), "#", :onclick => "$('#form_id').submit()", class: "delete-more" %>
        <% else %>
          <p class="space-bottom">No timer</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
