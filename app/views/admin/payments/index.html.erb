<% provide(:manage, 'Manage Payments') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Payments</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body col-lg-12'>
          <div class="link-left">
            <%= link_to raw('<i class="fa fa-plus"></i> Add Payment'), new_admin_payment_path, class: 'add-item' %>
          </div>
        </div>
        <table width="100%" class="table table-striped table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th class="">Payment Name</th>
              <th class="">Description</th>
              <th class="action-cat">Action</th>
            </tr>
          </thead>
          <tbody>
            <%= form_tag('#',:id => 'form_id', data: { confirm: "Your sure?" }) do %>
              <%= render @payments %>
            <% end %>
          </tbody>
        </table>
        <%= link_to raw("<i class='fa fa-trash-o fa-2x'></i>"), "#", :onclick => "$('#form_id').submit()", class: "delete-more" %>
      </div>
    </div>
  </div>
</div>
