<%= form_group_for "col-lg-12", f, :name, label: false  do %>
  <div class="form-group">
    <%= f.label :name %>
    <div class="input-group col-lg-6">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-product-hunt" aria-hidden="true"></i>
      </span>
      <%= f.text_field :name, placeholder: 'Name Promotion', class: 'form-control' %>
    </div>
  </div>
<% end %>
<div class="image-list col-lg-12">
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :file, id: "profile-img" %>
    <% image_url = f.object&.asset&.file_url %>
    <%  if image_url  %>
      <%= image_tag(image_url, class: "img-resize", id: "profile-img-tag") %>
    <% else %>
      <img src="/product-default.png" id="profile-img-tag" class="img-resize" />
    <% end %>
  </div>
</div>
<%= form_group_for "col-lg-12", f, :description, label: false  do %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: 'Description Promotion', class: 'form-control' %>
  </div>
<% end %>
<div class="col-lg-12 nested">
  <div class="image-list">
    <%= f.fields_for :promotions_categories do |pro_cat| %>
      <%= render "promotions_category_fields", f: pro_cat %>
    <% end %>
  </div>
  <%= link_to_add_fields("Add Category Promotion", f, :promotions_categories) %>
</div>
<%= form_group_for "col-lg-12", f, :start_date, label: false  do %>
  <div class="form-group">
    <%= f.label :start_date %>
    <div class="input-group col-lg-6">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-play" aria-hidden="true"></i>
      </span>
      <%= f.date_field :start_date, class: 'form-control' %>
    </div>
  </div>
<% end %>
<%= form_group_for "col-lg-12", f, :end_date, label: false  do %>
  <div class="form-group">
    <%= f.label :end_date %>
    <div class="input-group col-lg-6">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-stop" aria-hidden="true"></i>
      </span>
      <%= f.date_field :end_date, class: 'form-control' %>
    </div>
  </div>
<% end %>
<%= form_group_for "col-lg-12", f, :detail, label: false  do %>
  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_area :detail, placeholder: 'Detail', class: 'form-control ckeditor' %>
  </div>
<% end %>
<div class="col-lg-12">
  <%= f.submit "Submit", class: 'btn btn-success' %>
  <%= f.submit "Reset", class: 'btn btn-warning', type: 'reset' %>
</div>
