<% provide(:manage, 'Manage Promotions') %>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>List Promotions</p>
      </div>
      <div class="panel-body">
        <div class='header-panel-body col-lg-12'>
          <div class="link-left">
            <%= link_to raw('<i class="fa fa-plus"></i> Add promotion'), new_admin_promotion_path, class: 'add-item' %>
          </div>
        </div>
        <table width="100%" class="table table-striped table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th class="center">Name</th>
              <th class="center">Picture</th>
              <th class="center">Start date</th>
              <th class="center">End date</th>              
              <th class="center">Description</th>
              <th class="center">Category</th>
              <th class="center">Action</th>
            </tr>
          </thead>
          <tbody>
            <%= form_tag('#',:id => 'form_id', data: { confirm: "Your sure ?" }) do %>
              <%= render @promotions %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
