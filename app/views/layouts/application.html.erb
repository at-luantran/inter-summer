<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <% action_cable_meta_tag %>
    <%= stylesheet_link_tag    'public/application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'public/application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div id="container">
      <div class="col-lg-12 alert-auction">
        <% flash.each do |message_type, message| %>
          <div class="float-right alert alert-<%= message_type %> col-sm-3"><%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin: 0;">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>
      </div>
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>   
  </body>
</html>
