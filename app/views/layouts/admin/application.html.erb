<!DOCTYPE html>
<html>
  <head>
    <title>Autions Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <div id="wrapper">
        <%= render 'layouts/admin/nav' %>
        <div id="page-wrapper">
            <div class="row">
              <div class="col-lg-12 page-header">
                <h1 style="float: left"><%= yield(:manage) %></h1>
                <% flash.each do |message_type, message| %>
                  <div class="float-right alert alert-<%= message_type %> col-sm-3" id="notice-hidden">
                    <%= message %>
                  </div>
                <% end %>
              </div>
            </div>
            <%= yield %>
        </div>
    </div>
  </body>
</html>
