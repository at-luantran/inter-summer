<% provide(:title, 'Reset password') %>
<div class="header_image" style="background: url('https://fandy.vn/wp-content/uploads/2017/09/header-default-1.png') no-repeat left;height: 350px;background-size: 100%;"></div>
<div class="row">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Password</li>
    </ol>
  </nav>
  <div class="col-lg-12">
    <h2 class="title-page">
      Reset Password   
    </h2>
  </div>
  <div class="col-md-6 col-md-offset-3" style="margin-bottom: 30px;">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <div class= "text-center">
      <%= f.submit "Update password", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
