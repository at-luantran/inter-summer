<div class="row bootstrap snippets">
  <!-- Cart -->
  <div class="col-lg-12 col-md-12 col-sm-12 text-center">
    <div class="col-lg-12 col-sm-12 hero-feature">
      <% if @items.present? %>
        <div class="table-responsive">
          <table class="table table-bordered tbl-cart">
            <thead>
              <tr>
                <td class="hidden-xs">Image</td>
                <td>Product Name</td>
                <td class="td-qty">Quantity</td>
                <td>Unit Price</td>
                <td>Remove</td>
              </tr>
            </thead>
            <tbody>
              <%= render @items %>
              <tr>
                <td colspan="3" align ="right">Total</td>
                <td class="total" colspan="2"><b><%= @order.total_price %></b></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="btn-group btns-cart">
          <%= link_to raw('<i class="fa fa-arrow-circle-left">Back to shopping</i>'), root_path, class: "btn btn-primary" %>
          <%= link_to raw('<i class="fa fa-arrow-circle-right">Checkout</i>'), edit_user_order_path(current_user, @order), class: "btn btn-primary" %>
        </div>
      <% else %>
        <h2>Bạn chưa mua hàng</h2>
      <% end %>  
    </div>
  </div>
  <!-- End Cart -->
</div>
