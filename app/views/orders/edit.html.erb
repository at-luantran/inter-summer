<% provide(:title, 'Checkout') %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <p>Checkout</p>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_for(@order, url: user_order_path) do |f| %>
              <%= form_group_for f, :email, label: false  do %>
                <div class="form-group">
                  <%= f.label :name %>
                  <%= f.text_field :name, placeholder: @order.user.name, class: 'form-control' %>
                </div>
              <% end %>
              <%= form_group_for f, :email, label: false  do %>
                <div class="form-group">
                  <%= f.label :address %>
                  <%= f.text_field :address, placeholder: 'address', class: 'form-control' %>
                </div>
              <% end %>
              <%= form_group_for f, :email, label: false  do %>
                <div class="form-group">
                  <%= f.label :phone %>
                  <%= f.text_field :phone, placeholder: 'phone', class: 'form-control' %>
                </div>
              <% end %>
              <%= f.submit "Submit", class: 'btn btn-success' %>
              <%= f.submit "Reset", class: 'btn btn-warning', type: 'reset' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
